<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.dinus.com.recycleritemdecoration" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PinnedHeaderActivity"
            android:label="@string/label_pinned_header"/>

        <activity android:name=".LinearDividerActivity"
            android:label="@string/label_linear_divider"/>

        <activity android:name=".GridOffsetsActivity"
            android:label="@string/label_offsets_divider"/>

        <activity android:name=".ShaderActivity"
            android:label="@string/label_shader"/>

    </application>

</manifest>
